rules_version = '2';

// Firebase Storage Security Rules for UniConnect
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and download files
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for course materials
    match /materials/{courseCode}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.resource.size < 50 * 1024 * 1024 // 50MB limit for regular files
        && request.resource.contentType.matches('.*');
    }
    
    // Specific rules for chat media
    match /chat_media/{courseCode}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.resource.size < 100 * 1024 * 1024 // 100MB limit for chat media
        && request.resource.contentType.matches('.*');
    }
    
    // Rules for assignments
    match /assignments/{courseCode}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.resource.size < 50 * 1024 * 1024;
    }
    
    // Rules for notes and lectures
    match /notes/{courseCode}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.resource.size < 50 * 1024 * 1024;
    }
    
    match /lectures/{courseCode}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.resource.size < 50 * 1024 * 1024;
    }
    
    // Rules for resources
    match /resources/{courseCode}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.resource.size < 50 * 1024 * 1024;
    }
  }
}
